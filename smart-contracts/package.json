{
  "name": "flowbridge-smart-contracts",
  "version": "1.0.0",
  "description": "FlowBridge Protocol Smart Contracts - Cross-chain yield optimization with MetaMask Card integration",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:size": "hardhat size-contracts",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:goerli": "hardhat run scripts/deploy.ts --network goerli",
    "deploy:mumbai": "hardhat run scripts/deploy.ts --network mumbai",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network ethereum",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "deploy:arbitrum": "hardhat run scripts/deploy.ts --network arbitrum",
    "deploy:optimism": "hardhat run scripts/deploy.ts --network optimism",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "deploy:avalanche": "hardhat run scripts/deploy.ts --network avalanche",
    "deploy:linea": "hardhat run scripts/deploy.ts --network linea",
    "verify:sepolia": "hardhat run scripts/verify.ts --network sepolia sepolia",
    "verify:goerli": "hardhat run scripts/verify.ts --network goerli goerli",
    "verify:mumbai": "hardhat run scripts/verify.ts --network mumbai mumbai",
    "verify:mainnet": "hardhat run scripts/verify.ts --network ethereum ethereum",
    "verify:polygon": "hardhat run scripts/verify.ts --network polygon polygon",
    "verify:arbitrum": "hardhat run scripts/verify.ts --network arbitrum arbitrum",
    "verify:optimism": "hardhat run scripts/verify.ts --network optimism optimism",
    "verify:base": "hardhat run scripts/verify.ts --network base base",
    "verify:avalanche": "hardhat run scripts/verify.ts --network avalanche avalanche",
    "verify:linea": "hardhat run scripts/verify.ts --network linea linea",
    "setup:sepolia": "hardhat run scripts/setup.ts --network sepolia sepolia",
    "setup:goerli": "hardhat run scripts/setup.ts --network goerli goerli",
    "setup:mumbai": "hardhat run scripts/setup.ts --network mumbai mumbai",
    "setup:mainnet": "hardhat run scripts/setup.ts --network ethereum ethereum",
    "setup:polygon": "hardhat run scripts/setup.ts --network polygon polygon",
    "setup:arbitrum": "hardhat run scripts/setup.ts --network arbitrum arbitrum",
    "setup:optimism": "hardhat run scripts/setup.ts --network optimism optimism",
    "setup:base": "hardhat run scripts/setup.ts --network base base",
    "setup:avalanche": "hardhat run scripts/setup.ts --network avalanche avalanche",
    "setup:linea": "hardhat run scripts/setup.ts --network linea linea",
    "upgrade:validate": "hardhat run scripts/upgrade.ts --network localhost validate localhost",
    "upgrade:prepare": "hardhat run scripts/upgrade.ts --network localhost prepare localhost",
    "upgrade:all": "hardhat run scripts/upgrade.ts --network localhost upgrade-all localhost",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "check": "npm run lint && npm run format && npm run compile && npm run test",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "docs": "hardhat docgen",
    "flatten": "hardhat flatten",
    "security": "slither .",
    "mythril": "myth analyze contracts/ --solv 0.8.19"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowbridge/smart-contracts.git"
  },
  "keywords": [
    "defi",
    "yield-farming",
    "cross-chain",
    "metamask-card",
    "ethereum",
    "polygon",
    "arbitrum",
    "optimism",
    "base",
    "linea",
    "solidity",
    "hardhat",
    "openzeppelin"
  ],
  "author": "FlowBridge Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flowbridge/smart-contracts/issues"
  },
  "homepage": "https://flowbridge.fi",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/hardhat-upgrades": "^2.4.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.43",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sol": [
      "solhint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "contracts/**/*",
    "artifacts/**/*",
    "typechain-types/**/*",
    "deployments/**/*",
    "!contracts/test/**/*",
    "!contracts/mock/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "grants",
    "url": "https://flowbridge.fi/grants"
  }
}
