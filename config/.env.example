# FlowBridge Configuration - Example Environment Variables
# Copy this file to .env.local for development

# Application Configuration
NEXT_PUBLIC_APP_NAME=FlowBridge
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MetaMask SDK Configuration
NEXT_PUBLIC_METAMASK_SDK_ENABLED=true
NEXT_PUBLIC_METAMASK_DEEPLINK_ENABLED=true
NEXT_PUBLIC_METAMASK_PREFER_DESKTOP=false
NEXT_PUBLIC_METAMASK_CHECK_INSTALLATION=false

# Blockchain Network Configuration
NEXT_PUBLIC_DEFAULT_CHAIN_ID=1
NEXT_PUBLIC_SUPPORTED_CHAINS=1,137,42161,10,8453,59144

# RPC Provider URLs (Infura)
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key_here
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_api_key_here
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_api_key_here
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/your_infura_api_key_here
NEXT_PUBLIC_OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/your_infura_api_key_here
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_LINEA_RPC_URL=https://rpc.linea.build

# Alternative RPC Providers (Alchemy)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
NEXT_PUBLIC_ETHEREUM_ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
NEXT_PUBLIC_POLYGON_ALCHEMY_URL=https://polygon-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
NEXT_PUBLIC_ARBITRUM_ALCHEMY_URL=https://arb-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here
NEXT_PUBLIC_OPTIMISM_ALCHEMY_URL=https://opt-mainnet.g.alchemy.com/v2/your_alchemy_api_key_here

# LI.FI Cross-Chain Integration
NEXT_PUBLIC_LIFI_API_URL=https://li.quest/v1
NEXT_PUBLIC_LIFI_INTEGRATOR=flowbridge
NEXT_PUBLIC_LIFI_API_KEY=your_lifi_api_key_here

# Verax Attestation Registry
NEXT_PUBLIC_VERAX_ENABLED=true
NEXT_PUBLIC_VERAX_REGISTRY_ADDRESS=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e
NEXT_PUBLIC_VERAX_PORTAL_ADDRESS=your_verax_portal_address_here
NEXT_PUBLIC_VERAX_SCHEMA_ID=your_verax_schema_id_here

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Authentication Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/flowbridge_dev
REDIS_URL=redis://localhost:6379

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org_here
SENTRY_PROJECT=your_sentry_project_here

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=true
NEXT_PUBLIC_ENABLE_CARD_INTEGRATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_TESTNET=false

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Social Authentication (if using)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# Development Tools
NEXT_PUBLIC_ENABLE_LOGGER=true
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# Performance Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_API_CACHE_TTL=60000
NEXT_PUBLIC_STATIC_CACHE_TTL=86400000

# Backup RPC URLs
NEXT_PUBLIC_ETHEREUM_BACKUP_RPC=https://eth.llamarpc.com
NEXT_PUBLIC_POLYGON_BACKUP_RPC=https://polygon.llamarpc.com
NEXT_PUBLIC_ARBITRUM_BACKUP_RPC=https://arbitrum.llamarpc.com
NEXT_PUBLIC_OPTIMISM_BACKUP_RPC=https://optimism.llamarpc.com

# IPFS Configuration (if using)
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key_here
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret_key_here

# Push Notifications (if using)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
