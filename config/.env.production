# FlowBridge Production Environment Configuration
# Production environment variables - SECURE CONFIGURATION REQUIRED

# Application Configuration
NEXT_PUBLIC_APP_NAME=FlowBridge
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_URL=https://flowbridge.app

# MetaMask SDK Configuration
NEXT_PUBLIC_METAMASK_SDK_ENABLED=true
NEXT_PUBLIC_METAMASK_DEEPLINK_ENABLED=true
NEXT_PUBLIC_METAMASK_PREFER_DESKTOP=false
NEXT_PUBLIC_METAMASK_CHECK_INSTALLATION=true

# Production Network Configuration
NEXT_PUBLIC_DEFAULT_CHAIN_ID=1
NEXT_PUBLIC_SUPPORTED_CHAINS=1,137,42161,10,8453,59144

# RPC Provider URLs (Production - Secure)
NEXT_PUBLIC_INFURA_API_KEY=${INFURA_API_KEY}
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/${INFURA_API_KEY}
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/${INFURA_API_KEY}
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/${INFURA_API_KEY}
NEXT_PUBLIC_OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/${INFURA_API_KEY}
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_LINEA_RPC_URL=https://rpc.linea.build

# Alternative RPC Providers (Production)
NEXT_PUBLIC_ALCHEMY_API_KEY=${ALCHEMY_API_KEY}
NEXT_PUBLIC_ETHEREUM_ALCHEMY_URL=https://eth-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
NEXT_PUBLIC_POLYGON_ALCHEMY_URL=https://polygon-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
NEXT_PUBLIC_ARBITRUM_ALCHEMY_URL=https://arb-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
NEXT_PUBLIC_OPTIMISM_ALCHEMY_URL=https://opt-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# LI.FI Cross-Chain Integration
NEXT_PUBLIC_LIFI_API_URL=https://li.quest/v1
NEXT_PUBLIC_LIFI_INTEGRATOR=flowbridge
NEXT_PUBLIC_LIFI_API_KEY=${LIFI_API_KEY}

# Verax Attestation Registry (Production)
NEXT_PUBLIC_VERAX_ENABLED=true
NEXT_PUBLIC_VERAX_REGISTRY_ADDRESS=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e
NEXT_PUBLIC_VERAX_PORTAL_ADDRESS=${VERAX_PORTAL_ADDRESS}
NEXT_PUBLIC_VERAX_SCHEMA_ID=${VERAX_SCHEMA_ID}

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.flowbridge.app/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# Authentication Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (Production)
DATABASE_URL=${PRODUCTION_DATABASE_URL}
REDIS_URL=${PRODUCTION_REDIS_URL}

# External API Keys (Production)
COINGECKO_API_KEY=${COINGECKO_API_KEY}
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Analytics and Monitoring (Production)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=${PRODUCTION_GA_ID}
NEXT_PUBLIC_MIXPANEL_TOKEN=${PRODUCTION_MIXPANEL_TOKEN}
SENTRY_DSN=${PRODUCTION_SENTRY_DSN}
SENTRY_ORG=flowbridge
SENTRY_PROJECT=flowbridge-frontend-production

# Feature Flags (Production)
NEXT_PUBLIC_ENABLE_AI_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=true
NEXT_PUBLIC_ENABLE_CARD_INTEGRATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_TESTNET=false

# Security Configuration (Production)
CORS_ORIGIN=https://flowbridge.app,https://www.flowbridge.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Email Configuration (Production)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Social Authentication (Production)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
TWITTER_CLIENT_ID=${TWITTER_CLIENT_ID}
TWITTER_CLIENT_SECRET=${TWITTER_CLIENT_SECRET}

# Performance Configuration (Production)
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_API_CACHE_TTL=60000
NEXT_PUBLIC_STATIC_CACHE_TTL=86400000

# Backup RPC URLs (Production)
NEXT_PUBLIC_ETHEREUM_BACKUP_RPC=https://eth.llamarpc.com
NEXT_PUBLIC_POLYGON_BACKUP_RPC=https://polygon.llamarpc.com
NEXT_PUBLIC_ARBITRUM_BACKUP_RPC=https://arbitrum.llamarpc.com
NEXT_PUBLIC_OPTIMISM_BACKUP_RPC=https://optimism.llamarpc.com

# IPFS Configuration (Production)
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_PINATA_API_KEY=${PINATA_API_KEY}
NEXT_PUBLIC_PINATA_SECRET_KEY=${PINATA_SECRET_KEY}

# Push Notifications (Production)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=${VAPID_PUBLIC_KEY}
VAPID_PRIVATE_KEY=${VAPID_PRIVATE_KEY}

# Production-specific
NODE_ENV=production
NEXT_PUBLIC_DEVELOPMENT_MODE=false
NEXT_PUBLIC_ENABLE_LOGGER=false
NEXT_PUBLIC_LOG_LEVEL=error
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=false

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' *.metamask.io *.infura.io *.li.fi; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' *.metamask.io *.infura.io *.li.fi wss: https:;"
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin
