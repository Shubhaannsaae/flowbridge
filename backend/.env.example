# Environment Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=flowbridge
DB_PASSWORD=your_secure_password
DB_NAME=flowbridge_dev
DB_NAME_TEST=flowbridge_test
DB_SSL=false

# Security
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
BASE_RPC_URL=https://mainnet.base.org
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# WebSocket URLs (Optional)
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
POLYGON_WS_URL=wss://polygon-mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID

# AI Services
GEMINI_API_KEY=your_google_gemini_api_key

# External APIs (Optional)
COINGECKO_API_KEY=your_coingecko_api_key
DEFILLAMA_API_KEY=your_defillama_api_key

# Application URLs
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_METRICS=true
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true

# Contract Addresses (will be updated for production)
DTK_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
REBALANCING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
TOPUP_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
LIQUIDITY_MANAGER_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
